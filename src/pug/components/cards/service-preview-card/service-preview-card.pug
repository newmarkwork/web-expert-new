include ../../controls/main-btn/main-btn

mixin service-preview-card(data)
  .service-preview-card
    .service-preview-card__header
      small!= data.label
      span!= data.title
    .service-preview-card__content
      .service-preview-card__content-section
        p!= data.text
    .service-preview-card__footer
      span.service-preview-card__price!= data.cost

      .flex-row
        +main-btn({
          type: 'button',
          text: 'Оставить заявку',
          iconName: 'envelope',
          iconWidth: 20,
          iconHeight: 20,
          iconPosition: 'left',
          modal: 'offer-modal'
        })

        +main-btn({
          type: 'link',
          href: '#',
          text: 'Подробнее',
          cls: 'main-btn--outlined',
        })
